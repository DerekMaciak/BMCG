<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMCGMobile.AboutPage" Title="About" Icon="about.png">
    <ContentPage.Content>
        <Grid  Margin="0, 30, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="BMCGsplash.png" Margin="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"></Image>
            <Label Grid.Row="1" HorizontalOptions="CenterAndExpand" Margin="5,5,5,20" FontSize="Small" VerticalOptions="CenterAndExpand">Version 1.0.0.0 Copyright 2018</Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>