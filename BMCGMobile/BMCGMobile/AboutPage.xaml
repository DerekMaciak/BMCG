<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMCGMobile.AboutPage" Title="About" Icon="about.png">
    <ContentPage.Content>
        <Grid  Margin="0, 30, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3.33*"></RowDefinition>
                <RowDefinition Height="3.33*"></RowDefinition>
                <RowDefinition Height="3.33*"></RowDefinition>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="greenwaylogo.gif" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"></Image>
            <Label Grid.Row="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">Version 1.0.0.0 Alpha</Label>
            <Image Grid.Row="2" Source="Bloomfield_Rec_Dept_Logo.jpg" HorizontalOptions="CenterAndExpand" VerticalOptions="End"></Image>
        </Grid>
    </ContentPage.Content>
</ContentPage>