<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMCGMobile.AboutPage" Title="{Binding Resources[About]}" Icon="about.png">
    <ContentPage.Content>

        <AbsoluteLayout BackgroundColor="{StaticResource StandardDarkColor}">

            <Image Grid.Row="0" Source="BMCGsplash.png" Margin="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFit" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All"></Image>

            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" AbsoluteLayout.LayoutBounds=".5,.80,235,75" AbsoluteLayout.LayoutFlags="PositionProportional" >
            <Label Text="{Binding Resources[AboutVersion]}" Style="{StaticResource AboutLabelStyle}" ></Label>
                <Button Text="{Binding Resources[MobileAppHyperlinks]}" Style="{StaticResource ButtonHyperlinksStyle}" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>