<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMCGMobile.TermsPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
               
            </Grid.RowDefinitions>

            <WebView Grid.Row="0" x:Name="termsWebView" Margin="10" />

            <Button Grid.Row="1" x:Name="btnAccept" BorderWidth="1" WidthRequest="200"  Text="I ACCEPT THESE TERMS" Clicked="OnAcceptButtonClicked" BackgroundColor="Green" TextColor="White" HorizontalOptions="Center" Margin="0,10,0,30" />
        </Grid>
    </ContentPage.Content>
</ContentPage>